//==============================================================================

// Title:
// Post Styling

// Description:
// Styling for each post.

//==============================================================================

.post
  width 100%

.post__header
  width 100%
  float left
  margin 0 0 50px 0

.post__header__title
  float left
  font-size 82px
  font-family $headingFont
  font-weight 900

.post__header__title__link
  color $textColour
  transition color 0.2s ease
  &:hover
    text-decoration none
    color lighten($textColour, 30%)

.post__content
  max-width 700px
  font-weight 300
  margin 0 auto
  font-size 20px
  color #3a424c

.post__content__meta
  width 100%
  float left
  margin 0 0 20px 0
  font-size 15px
  color #979da4

.post__content__article
  width 100%
  float left
  line-height 160%

  p
    margin 0 0 20px 0

  code
    font-size 14px
    padding 3px 10px 4px
    background #fff
    border 1px solid rgba(226, 236, 239, 0.39)
    color rgb(55, 76, 82)
    box-sizing border-box
    word-wrap break-word
    font-family monospace
    border-radius 3px
    vertical-align top

  pre
    width 100%
    float left
    padding 10px 15px 12px 15px
    margin 0 0 20px 0
    border 1px solid rgba(226, 236, 239, 0.39)
    color rgb(55, 76, 82)
    background #fff
    border-radius 3px
    line-height 110%

    code
      border none
      border-radius none
      background none
      padding 0

  a
    padding 0 0 1px
    text-decoration none
    color $textColour
    border-bottom 2px solid #59d2d1
    transition color 0.2s ease
    &:hover
      color #59d2d1

  b
  strong
    font-weight 700

  em
    font-style italic
    font-weight 300

  h1
    margin 0 0 20px
    font-size 35px
    font-weight 700

  h2
    margin 0 0 20px
    font-size 30px
    font-weight 700

  ul
  ol
    float left
    width 100%
    margin 0 0 20px 0
    padding 0 0 0 20px

  ul
    list-style-type disc

  ol
    list-style-type decimal

.post__content__meta__break
  width 100%
  float left
  clear both
  margin 10px 0 0 0
  font-size 17px

.post__content__article__image
  float left
  clear both
  margin 0 0 20px 0

//------------------------------------------------------------------------------
// Media queries
//------------------------------------------------------------------------------

@media (max-width: 400px)

  .post__header__title
    font-size 35px

  .post__content
    font-size 17px

@media (min-width: 400px) and (max-width: 700px)

  .post__header__title
    font-size 50px
