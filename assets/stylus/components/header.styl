//==============================================================================

// Title:
// Header Styling

// Description:
// Styling for the page header.

//==============================================================================

.page-header
  width 100%
  float left
  padding 20px 0
  background white

.page-header__logo
  height 30px
  float left
  display block
  padding 0 0 0 27px
  transition color 0.2s ease
  background url('./images/logo.png') no-repeat
  background-size 27px 30px
  color $textColour
  &:hover
    color lighten($textColour, 40%)

.page-header__title
  display none
  margin 6px 0 6px 10px
  float left
  font-size 16px
  font-weight 300

.page-header__navigation
  float right
  margin 7px 0
  font-size 15px
  font-weight 700

.page-header__navigation__link
  margin 0 0 0 15px
  color $textColour
  transition color 0.2s ease
  &:hover
    text-decoration none
    color lighten($textColour, 40%)

.page-header__navigation__link--active
  padding 0 0 3px 0
  border-bottom 2px solid #59d2d1

//------------------------------------------------------------------------------
// Media queries
//------------------------------------------------------------------------------

@media $mediaRetina

  .page-header__logo
    background url('./images/logo@2x.png') no-repeat
    background-size 27px 30px

@media (min-width: 570px)

  .page-header__title
    display block